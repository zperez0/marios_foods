<%= render "layouts/errors", :object => @product %>
<%= form_for @product do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :cost %>
    <%= form.text_field :cost, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :country_of_orgin %>
    <%= form.select :country_of_orgin, Product::LIST_OF_COUNTRIES, class: "form-control" %>
  </div>
  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
