<div class="title-container">
  <h2><%= @product.name %></h2>
</div>
<h3>Rating: <%= @review.rating %> ‚≠ê </h3>
<h4><%= @review.content_body %></h4>
<h4>By: <%= @review.author %> on <%= @review.created_at %></h4>
<div class="edit_delete">
  <div class="thumbmail">
    <div class="caption">
      <br>
      <p>
        <%= link_to "Edit review", edit_product_review_path(@product, @review), class: "btn btn-default" %>
        <%= link_to "Delete review", product_review_path(@product, @review), class: "btn btn-danger",
                                                                              :data => { :confirm => "Are you sure you want to delete #{@product.name} review?",
                                                                                          :method => "delete" } %>
      </p>
    </div>
  </div>
</div>
<p><%= link_to "Return to product", product_path(@product) %></p>
